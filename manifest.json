{
  "manifest_version": 3,
  "name": "Proposal Copycat - AI Trained on Your Upwork Proposals",
  "version": "1.0",
  "description": "Train AI to write Upwork proposals in your style by analyzing your successful past proposals.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.upwork.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 